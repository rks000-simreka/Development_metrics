# GitHub Metrics Scanner Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED SETTINGS
# ============================================================================

# Your GitHub Personal Access Token
# Required scopes: repo, read:org, read:user
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=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

# GitHub Organization name to scan
GITHUB_ORG=simreka

# ============================================================================
# CSV OUTPUT SETTINGS
# ============================================================================

# Append mode for continuous monitoring (true/false)
# - true: Append to existing CSV file (for scheduled runs)
# - false: Create new timestamped CSV file for each run
APPEND_MODE=false

# Base filename for CSV output (without extension)
# - In append mode: creates {CSV_FILENAME}_continuous.csv
# - In single run mode: creates {CSV_FILENAME}_YYYYMMDD_HHMMSS.csv
CSV_FILENAME=github_metrics

# ============================================================================
# ANALYSIS SETTINGS
# ============================================================================

# Number of weeks to analyze (from today backwards)
WEEKS_TO_ANALYZE=12

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Maximum number of parallel workers for processing repositories
# Increase for faster processing (be mindful of rate limits)
MAX_WORKERS=5

# Batch size for processing (repos per batch)
BATCH_SIZE=10

# Maximum requests per second to GitHub API
# GitHub's GraphQL API has a rate limit of 5000 points per hour
MAX_REQUESTS_PER_SECOND=10

# ============================================================================
# CACHE SETTINGS
# ============================================================================

# Cache directory for storing API responses
CACHE_DIR=.github_cache

# Cache TTL in hours for organization members
CACHE_TTL_MEMBERS=24

# Cache TTL in hours for repository lists
CACHE_TTL_REPOS=6

# Clear cache after run (true/false)
CLEAR_CACHE=false

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file name
LOG_FILE=github_metrics.log

# ============================================================================
# SCHEDULER MODE SETTINGS (for cron/scheduled runs)
# ============================================================================

# When APPEND_MODE=true, these settings are relevant for scheduled runs:

# Send notifications on completion (requires additional setup)
SEND_NOTIFICATIONS=false

# Webhook URL for notifications (Slack, Discord, etc.)
NOTIFICATION_WEBHOOK_URL=

# Email settings for reports (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_RECIPIENTS=team@example.com

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Include bot accounts in metrics (true/false)
INCLUDE_BOTS=false

# Minimum commits threshold to include developer in report
MIN_COMMITS_THRESHOLD=1

# Include forked repositories (true/false)
INCLUDE_FORKS=false

# Repository name patterns to exclude (comma-separated regex patterns)
# Example: "test.*,.*-archived,deprecated-.*"
EXCLUDE_REPO_PATTERNS=

# Repository name patterns to include only (comma-separated regex patterns)
# If set, only repos matching these patterns will be analyzed
# Example: "backend-.*,frontend-.*,api-.*"
INCLUDE_REPO_PATTERNS=

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Use system keyring for token storage (more secure than env file)
# Requires 'keyring' Python package
USE_KEYRING=false

# Validate SSL certificates (should always be true in production)
VERIFY_SSL=true

# ============================================================================
# OUTPUT FORMAT SETTINGS
# ============================================================================

# Also export JSON file along with CSV (true/false)
EXPORT_JSON=true

# Maximum repositories to list in CSV active_repos column
MAX_REPOS_IN_CSV=10

# Date format for output files (strftime format)
DATE_FORMAT=%Y-%m-%d

# Timestamp format for output files (strftime format)
TIMESTAMP_FORMAT=%Y%m%d_%H%M%S

# ============================================================================
# EXAMPLE CRON SETTINGS (for reference)
# ============================================================================

# Run daily at 2 AM:
# 0 2 * * * cd /path/to/script && python github_metrics_enhanced.py

# Run weekly on Monday at 3 AM:
# 0 3 * * 1 cd /path/to/script && python github_metrics_enhanced.py

# Run monthly on the 1st at 4 AM:
# 0 4 1 * * cd /path/to/script && python github_metrics_enhanced.py

# With APPEND_MODE=true, these scheduled runs will continuously update
# the same CSV file with new data, perfect for tracking trends over time

USE_REST_FOR_LINES=true